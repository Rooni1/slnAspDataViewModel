@model AspDataViewModel.ViewModels.LoginViewModel

<div class="container mt-5">
    <div class="row justify-content-center align-items-center" >
        <div class="col-md-6 col-sm-6 col-lg-4">
            <h1 class="mb-3">Login</h1>
            <form method="post">
                <div class="mb-3">
                    <label asp-for="createLoginVM.Email" class="form-label">User Name</label>
                    <input type="text" asp-for="createLoginVM.Email" class="form-control" />
                    <span asp-validation-for="createLoginVM.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="createLoginVM.Password" class="form-label"> Password</label>
                    <input type="password" asp-for="createLoginVM.Password" class="form-control" />
                    <span asp-validation-for="createLoginVM.Password" class="text-danger"></span>
                </div>
                <div class="mb-3 row justify-content-around">
                    <button type="submit" asp-action="LoginView" class="btn btn-primary">Login</button>
                    <a href="https://localhost:44352/Login/RegisterView"> New User</a>
                </div>
                <div class="mb-3 justify-content-between" >
                    <label asp-for="createLoginVM.RememberMe" class="form-check-label">Remember Me?</label>
                    <input type="checkbox" class="form-check-input" asp-for="createLoginVM.RememberMe" />
                </div>
                              
                
            </form>

        </div>
    </div>
</div>
