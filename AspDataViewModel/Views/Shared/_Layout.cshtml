@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap-5/css/bootstrap.css" />
    <script src="~/JS/MyJavaScript.js"></script>
    <script src="~/lib/bootstrap-5/js/bootstrap.js"></script>
    <link rel="stylesheet" href="~/Content/MyStyleSheet.css" />
    <title>People Management</title>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Future Solution</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="People" asp-action="PeopleView">Add Person<span class="sr-only"></span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " asp-controller="Ajax" asp-action="Index">Manage People with Ajax</a>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link " asp-controller="Country" asp-action="CountryView">Add Country</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-controller="City" asp-action="CityView">Add City</a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link " asp-controller="Language" asp-action="LanguageView">Add Language</a>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link " asp-controller="Administration" asp-action="ManageUserRole">Manage user role</a>
                        </li>
                    }
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <a class="nav-link " asp-controller="Login" asp-action="LogoutView">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link " asp-controller="Login" asp-action="LoginView">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
    @ViewBag.Message
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap-5/js/bootstrap.js"></script>
    <script src="~/JS/MyJavaScript.js"></script>
   

</body>
</html>
