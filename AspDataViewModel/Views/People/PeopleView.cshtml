@model AspDataViewModel.ViewModels.PeopleViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>People Management</h2>

        <h3>Add Person</h3>
        <form asp-action="PeopleView" asp-controller="People" method="post" id="myForm">

            @*<label asp-for="Name"></label>*@
            <input asp-for="CreatePersonVM.Name" id="name" placeholder="Name" />

            @*<label asp-for="PhoneNumber"></label>*@
            <input asp-for="CreatePersonVM.PhoneNumber" id="phoneNumber" placeholder="Phone Number" />

            @*<label asp-for="City"></label>*@
            <input asp-for="CreatePersonVM.City" id="city " placeholder="City" />

            <button type="submit">Add Person</button>
            @*<input type="button" value="Reset" id="reset" onclick="clear()" />*@
            <input type="submit" value="Update" asp-action="UpDate">
            <input type="button" class="btn btn-secondary" value="Reset" id="reset" onclick="clear()">

        </form>
        <form asp-action="FindByViewModel" method="post">
            <label asp-for="FilterText"></label>
            <input asp-for="FilterText" />
        </form>


  

    <table class="table">
        <thead>
            <tr>
                <th>Person Id</th>
                <th>Name</th>
                <th>Phone Number</th>
                <th>City</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.peopleList)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.City</td>
                    <td><a asp-action="UpDate">Edit</a></td>
                    <td><a asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                </tr>
            }

        </tbody>

    </table>













