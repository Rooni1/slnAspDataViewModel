@model AspDataViewModel.ViewModels.PeopleViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>People Management</h2>
@using (Html.BeginForm())
{
    <input asp-for="CreatePersonViewModel.Name" />
    <input asp-for="CreatePersonViewModel.PhoneNumber" />
    <input asp-for="CreatePersonViewModel.CityName" />
    <input type="submit" value="Add Person" method="post" asp-controller="People" asp-action="PeopleView" />
}
<form asp-action="ShowPeople" method="get"> 

   
            <table>
               @foreach (var item in Model.peopleList)
               {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.City</td>
                    </tr>
               }

      
            </table>
</form>
           
 

       









